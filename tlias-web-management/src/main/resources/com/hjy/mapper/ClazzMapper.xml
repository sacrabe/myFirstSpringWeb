<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hjy.mapper.ClazzMapper">
    <insert id="addClazz">
        insert into clazz(name,room,begin_date,end_date,master_id,create_time,update_time,subject)
        values(#{name},#{room},#{beginDate},#{endDate},#{masterId},#{createTime},#{updateTime},#{subject})
    </insert>
    <update id="updateClazz">
        UPDATE clazz
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="room != null">room = #{room},</if>
            <if test="beginDate != null">begin_date = #{beginDate},</if>
            <if test="endDate != null">end_date = #{endDate},</if>
            <if test="masterId != null">master_id = #{masterId},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="subject != null">subject = #{subject},</if>

        </set>
        WHERE id = #{id}

    </update>
    <delete id="delete">
        delete from clazz where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>

    </delete>


    <select id="findAll" resultType="com.hjy.pojo.Clazz">
    select c.*,e.name masterName from clazz c left join emp e on e.id = c.master_id
    <where >

        <if test="name !=null and name !='' ">
            and c.name like concat('%',#{name},'%')
        </if>

        <if test="begin !=null and end !=null ">
            and c.end_date between #{begin} and #{end}
        </if>

    </where>


    </select>
</mapper>